{{#each posts}}
    {{#with this}}
        <div class="jumbotron">
            <h1>{{title}}</h1>
            <p>{{truncate description 150 true}}</p>
            <a href="/post/{{slug}}" class="btn btn-default pull-right">Details</a>
            <div class="clearfix"></div>
        </div>
    {{/with}}
{{/each}}
