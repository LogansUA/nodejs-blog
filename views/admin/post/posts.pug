extends ../main

append title
    |  - Post - List

block content
    .row
        a(href='/admin/post/create' class='btn btn-success pull-right') Create

    .row
        .table-responsive
            table.table.table-striped.table-bordered
                thead
                    tr
                        th Title
                        th Slug
                        th Enabled
                        th(width='150px') Actions
                tbody
                    each post in posts
                        tr
                            td
                                span= post.title
                            td
                                span= post.slug
                            td
                                span= post.enabled
                            td
                                a(href='/admin/post/' + post.slug class='btn btn-info btn-xs') View
                                a(href='/admin/post/' + post.slug + '/edit' class='btn btn-primary btn-xs') Edit
                                a(href='/admin/post/' + post.slug + '/delete' class='btn btn-danger btn-xs') Delete
